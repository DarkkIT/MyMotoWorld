@using MyMotoWorld.Web.ViewModels.Admins
@model AddNewsInputModel
@{
    this.ViewData["Title"] = "Add News";
}

<h1 class="text-center">Add News</h1>

<form method="post" class="col-md-7 offset-4 text-center" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger col-md-12"></div>

    <div class="col-md-7">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-7">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-7">
        <label asp-for="ImageName"></label>
        <input asp-for="ImageName" class="form-control" />
        <span asp-validation-for="ImageName" class="text-danger"></span>
    </div>

    <div class="col-md-7">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" />

</form>