@model MyMotoWorld.Web.ViewModels.MotorBike.MotorBikeListViewModel;

@{
    this.ViewData["Title"] = "Favorites";
}


@if (Model.MotorBikes == null)
{
    <p class="mt-5">No favorite bikes addet yet</p>
}

<div class="row col-md-12 justify-content-center">

    @foreach (var bike in Model.MotorBikes)
    {
        <a class="text-dark" asp-controller="Store" asp-action="Details" asp-route-id="@bike.Id">

            <div class="card col-md-3 m-4" style="width: 18rem;">
                <img class="card-img-top" src="@bike.MainImagePath" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@bike.Name @bike.Model</h5>
                    <p class="card-text">Some Text</p>
                    <a class="btn btn-success" asp-controller="Favorites" asp-action="RemoveFavorite" asp-route-id="@bike.Id">UnFavorite</a>
                </div>
            </div>
        </a>
    }

</div>

